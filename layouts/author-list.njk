{% extends "index_main.njk" %}
{% block pageMain %}
  <div class="content">
    <h2 id="the-foundation" class="content-subhead">
      {{ title }}
    </h2>
    <div class="table-responsive">
      <ul>
        {% for author, authordata in collections.authors | dictsort %} 
          <li>
            <a href="{{rootRelativePath}}/{{authordata.file.ownRelativePathFromRoot}}">{{author}}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endblock pageMain %}