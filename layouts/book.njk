{% extends "main-parent.njk" %}
{% block pageMain %}
  <div class="content">
    <div id="book-title">
    <h2 class="content-subhead">
      {% for author in authors %}
        {{author.name}}{{"," if not loop.last }}{{":" if loop.last }}
      {% endfor %}
      {{ title }}
    </h2>
    <h3 class="content-subhead" style="margin-top: 0px;">
      PPEK szám: {{ ppeknum }}.
    </h3>
    </div>
    <div id="book-content">
      {{ contents | replaceVariables({ 'collections': collections, 'rootRelativePath': rootRelativePath }) | safe }}
    </div>
    <div id="book-links">
      <hr>
      <ul class="ul-custom">
      {% if var|length %}
        <li class="with-some-padding font-bigger">Letöltés:</li>
      {% endif %}
      {% for type, url in downloadUrls %}
        <li class="with-a-few-padding"><a class="font-bigger" href="{{url}}">{{type | upper}}</a></li>
      {% endfor %}
      </ul>
    </div>
  </div>
{% endblock pageMain %}