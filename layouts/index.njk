{% extends "main-parent.njk" %}
{% block pageMain %}
  <div class="content">
    <h2 id="the-foundation" class="content-subhead">
      {{ title }}
    </h2>
    <div class = "pure-g">
      <div class = "pure-u-3-4 pure-u-lg-7-8">
        {{ contents | safe }}
      </div>
      <div class = "pure-u-1-4 pure-u-lg-1-8">  
        <img class = "pure-img" src = "{{ rootRelativePath }}/images/pazmany.gif" alt="html5" style="padding-left: 1em; padding-top: 1em;">  
      </div>
    </div>
  </div>
  <div class="content">
    <i>Állomány: {{ collections.books | length }} kötet.</i>
  </div
{% endblock pageMain %}